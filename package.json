{
  "name": "storz-bickel-app",
  "version": "1.0.3",
  "description": "Storz & Bickel Desktop App für Linux & Windows",
  "main": "main.js",
  "scripts": {
    "start": "env -u ELECTRON_RUN_AS_NODE electron .",
    "build": "electron-builder --linux",
    "build:appimage": "electron-builder --linux AppImage",
    "build:deb": "electron-builder --linux deb",
    "build:rpm": "electron-builder --linux rpm",
    "build:flatpak": "./flatpak/build-flatpak.sh",
    "generate:flatpak-sources": "uv run --with /tmp/flatpak-builder-tools/node flatpak-node-generator npm package-lock.json -o generated-sources.json",
    "postinstall": "echo '⚠️  Scripts sind deaktiviert. Bei Bedarf manuell mit --ignore-scripts=false ausführen.'"
  },
  "keywords": [
    "storz-bickel",
    "electron",
    "desktop-app"
  ],
  "author": {
    "name": "BachenbergS",
    "email": "rayjin2000@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.6.0"
  },
  "build": {
    "appId": "com.storzbickel.app",
    "productName": "Storz & Bickel",
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Utility",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "differentialPackage": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "assets/**/*"
    ],
    "artifactName": "${name}-${version}.${ext}",
    "publish": null
  }
}
